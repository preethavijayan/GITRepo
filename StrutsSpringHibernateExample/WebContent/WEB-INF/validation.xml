<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
<formset>

<form name="/registration">

			<field property="name" depends="required">
				<arg0 key="loginform.name" />

			</field>
			<field property="address" depends="required">
				<arg0 key="loginform.address" />

			</field>
			
			<field property="city" depends="required">
				<arg0 key="loginform.city" />

			</field>
			
			<field property="state" depends="required">
				<arg0 key="loginform.state" />

			</field>
			
			<field property="country" depends="required">
				<arg0 key="loginform.country" />

			</field>
			
			<field property="pinCode" depends="required">
				<arg0 key="loginform.pincode" />

			</field>
			
			<field property="userName" depends="required">
				<arg0 key="loginform.userName" />

			</field>
			
			<field property="password" depends="required">
				<arg0 key="loginform.password" />

			</field>

		</form>

</formset>
</form-validation>
